<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="app.winding.com.windingapp.ui.PurchaseFilmActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include layout="@layout/common_base" />

        <include layout="@layout/linetwo_layout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_24"
                android:text="电影名称"
                android:textColor="@color/color_1f"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/moviename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_23"
                android:layout_toEndOf="@+id/textView31"
                android:background="@null"
                android:hint="请输入电影名称"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/color_f2" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="#F4F4F4" />

        <RelativeLayout
            android:id="@+id/rlcity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54">

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_24"
                android:text="城市"
                android:textColor="@color/color_1f"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView32"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/textView32"
                android:text="" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toEndOf="@+id/city"
                android:src="@mipmap/next" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView32"
                android:layout_alignBottom="@+id/textView32"
                android:layout_centerHorizontal="true"
                android:text="影院"
                android:textColor="@color/color_1f"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/writemoview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView33"
                android:background="@null"
                android:gravity="center"
                android:hint="输入影院名称"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="#F4F4F4" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_14"
                android:text="商家备注"
                android:textColor="@color/color_1f"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_alignBaseline="@+id/textView6"
                android:layout_alignBottom="@+id/textView6"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/textView6"
                android:background="@null"
                android:gravity="top"
                android:hint="请详细的描述您需要备注的需求..."
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/color_f4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_54"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_24"
                android:gravity="center_vertical"
                android:text="详情"
                android:textColor="@color/color_1f"
                android:textSize="@dimen/sp_12" />

            <EditText
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_toEndOf="@+id/textView7"
                android:background="@null"
                android:hint="输入所需电影票详情(必填)"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

        <TextView
            android:id="@+id/cofimOrder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignStart="@+id/code"
            android:layout_below="@+id/code"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@mipmap/cofimlogin"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:text="提交支付"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:layout_alignLeft="@+id/code" />


    </LinearLayout>


</RelativeLayout>
