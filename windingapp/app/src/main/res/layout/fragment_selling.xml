<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/lly"
    tools:context="app.winding.com.windingapp.fragment.MarginBuyingFragment">
   <include layout="@layout/common_base"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/sequencing_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/red"
        app:tabBackground="@null"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabSelectedTextColor="@color/red"

        app:tabTextColor="@color/black" />
    <app.winding.com.windingapp.ui.NoScrollViewPager
        android:id="@+id/meal_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
