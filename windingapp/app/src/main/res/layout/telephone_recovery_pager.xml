<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlstrategy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_5">

        <TextView
            android:id="@+id/textView48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_13"
            android:gravity="center"
            android:text="直接抢单"
            android:textColor="@color/color_96"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/Accumulated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/textView48"
            android:src="@mipmap/exclamation"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/textView48" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcyrecovery"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_17"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textColor="@color/color_999"
         />
</LinearLayout>