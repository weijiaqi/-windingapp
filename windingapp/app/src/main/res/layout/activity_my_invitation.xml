<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_income"
    tools:context="app.winding.com.windingapp.activity.MyInvitationActivity">

    <include layout="@layout/common_base"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
         android:background="@mipmap/myinpic">
        <LinearLayout
            android:layout_marginBottom="-4dp"
            android:layout_marginTop="@dimen/dp_120"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginEnd="-1dp"
            android:background="@mipmap/whiteban"
            android:text="我的邀请"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_24"
            android:id="@+id/button" />


        <TextView
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button"
            android:layout_alignBottom="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginEnd="-1dp"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_e7"
            android:background="@mipmap/yellban"
            android:text="邀请列表" />

        <TextView
            android:id="@+id/income"
            android:background="@mipmap/yellban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout"
            android:layout_toEndOf="@+id/pay"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_e7"
            android:layout_marginRight="@dimen/dp_21"
            android:text="邀请奖励" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_26"
            android:background="@mipmap/whitepic"
            android:layout_marginEnd="@dimen/dp_21"
            android:id="@+id/linearLayout">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_26"
                android:layout_marginEnd="@dimen/dp_21"
                android:id="@+id/fl">

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
