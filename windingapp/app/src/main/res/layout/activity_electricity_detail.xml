<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.winding.com.windingapp.ui.ElectricityDetailActivity">

    <include layout="@layout/common_base" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_16"
            android:text="金额"
            android:textColor="@color/color_1f"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/sendprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_51"
            android:layout_toEndOf="@+id/textView47"
            android:text="@string/send_price"
            android:textColor="@color/color_1f" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/sendprice"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="67dp"
            android:layout_marginTop="160dp"
            android:text="上传凭证截图"
            android:textColor="@color/color_1f"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_22"
            android:text="充值户号"
            android:textColor="@color/color_1f"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/Household"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView49"
            android:layout_marginStart="@dimen/dp_23"
            android:layout_toEndOf="@+id/textView49"
            android:text=""
            android:layout_marginEnd="@dimen/dp_70"
            android:textColor="@color/color_1f"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/copynumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Household"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/copynumber" />

        <TextView
            android:id="@+id/names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView49"
            android:layout_marginBottom="@dimen/dp_20"
            android:text=""
            android:textColor="@color/color_1f"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Household"
            android:layout_alignTop="@+id/names"
            android:text=""

            android:textColor="@color/color_1f"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlupload"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            android:text="上传凭证截图"
            android:textColor="@color/color_1f"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/pingzheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView46"
            android:layout_alignBottom="@+id/textView46"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_toEndOf="@+id/textView46"
            android:text=""
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pingzheng"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@mipmap/code" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Cancelrecharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:background="@mipmap/cancelrecharge" />

        <TextView
            android:id="@+id/Confirm_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
              android:layout_marginEnd="@dimen/dp_13"
            android:layout_alignParentTop="true"
            android:background="@mipmap/cofimupload" />
    </RelativeLayout>


</LinearLayout>
