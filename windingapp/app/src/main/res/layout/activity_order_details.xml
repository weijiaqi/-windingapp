<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="app.winding.com.windingapp.activity.OrderDetailsActivity">

    <include layout="@layout/common_base" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlbk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_93"
                android:background="@mipmap/bkdetail">

                <TextView
                    android:id="@+id/Completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_34"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/Completed"
                    android:layout_alignStart="@+id/Completed"
                    android:layout_below="@+id/Completed"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="2019-01-08 20:05:37"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/typename"
                    android:layout_marginLeft="@dimen/dp_23"
                    android:layout_marginStart="@dimen/dp_23"
                    android:layout_marginTop="@dimen/dp_2"
                    android:src="@mipmap/buy" />

                <TextView
                    android:id="@+id/typename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:layout_marginStart="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="优惠券"
                    android:textColor="@color/color_1f"
                    android:textSize="@dimen/sp_10" />


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageView"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/imageView"
                    android:layout_marginBottom="8dp"
                    android:text=""
                    android:textColor="@color/color_1f"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    tools:ignore="UnknownId" />


                <TextView
                    android:id="@+id/pay_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/title"
                    android:layout_alignBottom="@+id/title"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text=""
                    android:textColor="@color/color_ff"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="UnknownId" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="@color/color_f4"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/Order_Number"
                    android:layout_alignStart="@+id/Order_Number"
                    android:layout_marginTop="@dimen/dp_15"
                    android:src="@mipmap/rectangle" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dp_27"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="订单详情"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/Order_Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView11"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text=""
                    android:textColor="#ff565656"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/createtime"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="复制"
                    android:textColor="#ffff383b"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/createtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/Order_Number"
                    android:layout_alignStart="@+id/Order_Number"
                    android:layout_below="@+id/Order_Number"
                    android:layout_marginTop="@dimen/dp_11"
                    android:text=""
                    android:textColor="#ff565656"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/remarkdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/createtime"
                    android:layout_alignStart="@+id/createtime"
                    android:layout_below="@+id/createtime"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text=""
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_10" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="@color/color_f4"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/rlpicdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
               >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_17"
                        android:src="@mipmap/rectangle" />

                    <TextView
                        android:id="@+id/Picture_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/dp_27"
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="图文详情"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/click_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:text="长按图片可保存"
                        android:textColor="#FF383B"
                        android:textSize="@dimen/sp_10" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/pic2"
                    android:layout_width="@dimen/dp_140"
                    android:layout_height="@dimen/dp_140"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_15"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/pic3"
                    android:layout_width="@dimen/dp_140"
                    android:layout_height="@dimen/dp_140"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_15"
                    android:scaleType="fitXY" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llvoucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/Uploadcredentials"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/sweepcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/Update"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@mipmap/sweepcode" />


                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="28dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="24dp"
                        android:text="上传凭证"
                        android:textColor="@color/color_1f"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/Update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView30"
                        android:layout_alignBottom="@+id/textView30"
                        android:layout_marginEnd="@dimen/dp_50"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="@dimen/dp_50"
                        android:layout_marginStart="27dp"
                        android:layout_toEndOf="@+id/textView30"
                        android:layout_toRightOf="@+id/textView30"
                        android:background="@null"
                        android:gravity="bottom"
                        android:hint="请上传凭证截图"
                        android:textColorHint="@color/color_c8"
                        android:textSize="@dimen/sp_12" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Cancellation"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_weight="1"
                        android:background="@mipmap/cofimlogin"
                        android:gravity="center"
                        android:text="取消订单"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/submit"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_weight="1"
                        android:background="@mipmap/cofimlogin"
                        android:gravity="center"
                        android:text="确认上传"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout

                android:id="@+id/llcancelorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/cancelorder"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_weight="1"
                    android:background="@mipmap/cofimlogin"
                    android:gravity="center"
                    android:text="取消订单"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/pay"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_weight="1"
                    android:background="@mipmap/cofimlogin"
                    android:gravity="center"
                    android:text="支付"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llcofimend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="vertical"
                android:visibility="gone">


                <TextView
                    android:id="@+id/cofimend"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_weight="1"
                    android:background="@mipmap/cofimlogin"
                    android:gravity="center"
                    android:text="确认完成"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15" />


            </LinearLayout>




        </LinearLayout>
    </ScrollView>
</LinearLayout>
