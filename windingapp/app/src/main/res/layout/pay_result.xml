<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/paybackground">

    <include layout="@layout/common_basetrans" />

    <ImageView
        android:id="@+id/paypic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_100"
        android:src="@mipmap/paysuccess" />

    <TextView
        android:id="@+id/paystatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="支付成功"
        android:textColor="#333333"
        android:textSize="@dimen/sp_17" />


    <TextView
        android:id="@+id/paydetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paystatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:text="您的订单支付成功"
        android:textColor="#AAA8A8"
        android:textSize="@dimen/sp_12" />
</RelativeLayout>