<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="app.winding.com.windingapp.ui.SettingActivity">

    <include layout="@layout/common_base" />

    <app.winding.com.windingapp.ui.CircleImageView
        android:id="@+id/headpic"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_45"
        android:src="@mipmap/bitmaplogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:text="点击修改头像"
        android:textColor="#868686"
        android:textSize="@dimen/sp_10" />


    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rlnikename"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_20">

        <TextView

            android:id="@+id/nikename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_19"
            android:text="我的呢称"
            android:textColor="#101010"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/nikename"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="修改"
            android:textColor="#868686"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rlsex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_19"
            android:text="性别"
            android:textColor="#101010"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/sex"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="修改"
            android:textColor="#868686"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#F4F4F4" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rlpaybing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <TextView
            android:id="@+id/paybinding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_19"
            android:text="支付宝绑定"
            android:textColor="#101010"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/paybinding"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="未绑定"
            android:textColor="#868686"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rlclearcache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <TextView
            android:id="@+id/Clearcache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_19"
            android:text="清除缓存"
            android:textColor="#101010"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/Clearcache"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="修改手机号"
            android:textColor="#868686"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#F4F4F4" />

    <TextView
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:background="@color/white"
        android:text="退出当前账号"
        android:textColor="#FF383B"
        android:textSize="@dimen/sp_12" />

</LinearLayout>
