<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/ll_income"
    tools:context="app.winding.com.windingapp.activity.TaskDetailActivity">

    <include layout="@layout/common_base" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_7">

                <ImageView
                    android:id="@+id/pic"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/dp_17"
                    android:src="@mipmap/bitmaplogo"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_17" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_toEndOf="@+id/pic"
                    android:text=""
                    android:textColor="@color/color_1f"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_toRightOf="@+id/pic" />

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/name"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text=""
                    android:textColor="@color/color_b7"
                    android:textSize="@dimen/sp_9"
                    android:layout_alignLeft="@+id/name" />
            </RelativeLayout>

            <include layout="@layout/line_layout" />

            <TextView
                android:id="@+id/titlename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_18"
                android:text=""
                android:textColor="@color/color_1f"
                android:layout_marginLeft="@dimen/dp_17" />

            <TextView
                android:id="@+id/titledetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_10"
                android:text=""
                android:layout_marginLeft="@dimen/dp_17" />
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_20"
                android:text=""
                android:layout_marginBottom="@dimen/dp_15"
                android:textColor="@color/color_ff"
                android:layout_marginLeft="@dimen/dp_17" />







            <TextView

                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="@color/color_f4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_17"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_14"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_17">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:src="@mipmap/rectangle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:gravity="center_vertical"
                    android:text="订单详情"
                    android:textColor="@color/color_1f"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_17"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_17">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:src="@mipmap/colock" />

                <TextView
                    android:id="@+id/create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:gravity="center_vertical"
                    android:text=""

                    android:textColor="@color/color_1f"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lladdress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_17"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_17">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:src="@mipmap/address" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_1f"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/Order_for_him"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@mipmap/redbold"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
