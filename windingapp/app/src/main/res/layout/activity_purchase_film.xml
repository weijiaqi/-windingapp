<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="app.winding.com.windingapp.ui.PurchaseFilmActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/common_base" />

        <include layout="@layout/linetwo_layout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_24"
                android:text="电影名称"
                android:textColor="@color/color_1f"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/moviename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_23"
                android:layout_toEndOf="@+id/textView31"
                android:background="@null"
                android:textSize="@dimen/sp_12"
                android:textColorHint="@color/color_c8"
                android:hint="请输入电影名称" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/color_f2" />

        <EditText
            android:id="@+id/remark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:background="@null"
            android:layout_marginTop="@dimen/dp_14"
            android:textSize="@dimen/sp_12"
            android:gravity="top"
            android:textColorHint="@color/color_c8"
            android:hint="请详细的描述您需要备注的需求..." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="#F4F4F4" />

        <RelativeLayout
            android:id="@+id/rlcity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54">

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_24"
                android:text="城市"
                android:textColor="@color/color_1f"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView32"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView32"
                android:text="" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/city"
                android:src="@mipmap/next" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView32"
                android:layout_alignBottom="@+id/textView32"
                android:layout_centerHorizontal="true"
                android:text="影院"
                android:textColor="@color/color_1f"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/writemoview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView33"
                android:layout_alignStart="@+id/textView33"
                android:layout_marginStart="46dp"
                android:background="@null"
                android:gravity="center"
                android:textColorHint="@color/color_c8"
                android:textSize="@dimen/sp_12"
                android:hint="输入影院名称" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"

            android:background="@color/color_f2" />

        <RelativeLayout
            android:id="@+id/rldate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54">

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_24"
                android:text="时间"
                android:textColor="@color/color_1f"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView34"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_60"
                android:layout_toEndOf="@+id/textView34" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_40"
                android:src="@mipmap/icback"
                android:id="@+id/imageView15" />


        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="#F4F4F4" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54">

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_24"
                android:text="票数"
                android:textColor="@color/color_1f"
                android:textSize="@dimen/sp_14" />


            <EditText
                android:id="@+id/Price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_toEndOf="@+id/textView35"
                android:background="@null"
                android:numeric="integer"
                android:hint="输入购买张数"
                android:textColorHint="@color/color_c8"
                android:textColor="@color/color_1f"
                android:textSize="@dimen/sp_12" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="22dp"
                android:layout_toEndOf="@+id/Price"
                android:text="售价"
                android:textColor="@color/color_1f"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/selling_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_26"
                android:background="@null"
                android:numeric="decimal"
                android:hint="输入实际售价"
                android:textColorHint="@color/color_c8"
                android:textColor="@color/color_1f"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_500"
            android:background="#F4F4F4" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_16"
            android:text="共计"
            android:textColor="@color/color_18"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView36"
            android:layout_alignBottom="@+id/textView36"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/textView36"
            android:text="0.0 元"
            android:textColor="@color/color_18"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView36"
            android:layout_below="@+id/Total"
            android:layout_marginTop="@dimen/dp_5"
            android:text="预估结算价格"
            android:textColor="@color/color_c8"
            android:textSize="@dimen/sp_9" />

        <TextView
            android:id="@+id/cofimorder"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@mipmap/cofimlogin"
            android:gravity="center"
            android:text="确认订单"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
</RelativeLayout>
