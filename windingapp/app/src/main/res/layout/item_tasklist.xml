<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:scaleType="fitXY"
            android:src="@mipmap/bitmaplogo"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_10" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pic"
            android:layout_marginStart="44dp"
              android:layout_marginEnd="@dimen/dp_10"
            android:layout_toEndOf="@+id/pic"
            android:lineSpacingExtra="@dimen/dp_2"
            android:text=""
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_1f"
            android:textSize="@dimen/sp_14"
            android:layout_toRightOf="@+id/pic"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="44dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_alignTop="@+id/pic"
            android:layout_toEndOf="@+id/pic"
            android:src="@mipmap/wantbuy"
            android:id="@+id/typestatus"
            android:layout_toRightOf="@+id/pic" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/typestatus"
            android:layout_below="@+id/typestatus"
            android:layout_marginTop="@dimen/dp_25"
            android:text="11"
            android:textColor="@color/color_ff"
            android:textSize="@dimen/sp_16"
            android:layout_alignLeft="@+id/typestatus" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/price"
            android:layout_alignBottom="@+id/price"
            android:layout_toEndOf="@+id/price"
            android:text="111"
            android:layout_marginLeft="@dimen/dp_8"
            android:textColor="@color/color_aa"
            android:textSize="@dimen/sp_9"
            android:layout_toRightOf="@+id/price" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pic"
            android:layout_alignStart="@+id/price"
            android:text="2019-02-12 09:12:28"
            android:textColor="@color/color_8f"
            android:textSize="@dimen/sp_10"
            android:layout_alignLeft="@+id/price" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电影票"
            android:layout_alignBottom="@+id/pic"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:textSize="@dimen/sp_10"
            android:textColor="#54A7FF"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="@dimen/dp_120"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_f4" />
</LinearLayout>